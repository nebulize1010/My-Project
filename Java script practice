    <script>
    
    function Setcolor(color, color2) {
    document.querySelector('body').style.backgroundColor = color;
    document.querySelector('body').style.color = color2;
    }    
        
    function hello(self) {
        var target = document.querySelector('body');
      if(self.value==='night'){
      Setcolor('black', 'white');
      self.value = 'day';
      var aslice = document.querySelectorAll('a');
      var i = 0;
      while(i<aslice.length){
      aslice[i].style.color = 'powderblue';
      i = i + 1; 
       }
    } else {
      Setcolor('white', 'black');
      self.value = 'night';
      var aslice = document.querySelectorAll('a');
      var i = 0;
      while(i<aslice.length){
      aslice[i].style.color = 'blue';
      i = i + 1; 
      }
    }
    }
    
    
    
    
    
    </script>
